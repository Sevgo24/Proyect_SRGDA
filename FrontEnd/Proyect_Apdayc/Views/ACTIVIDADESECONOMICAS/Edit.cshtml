<script type="text/ecmascript">
    if ('@TempData["flag"]' == "1") {
        $("#btnedit").hide();
        $("#btnVolver").hide();
        $("#btnneo").hide();
        $("#btnnuevo").hide();
        alert("Grabado corectamente.");
        location.href = "../";
    } else {

        if ('@TempData["msg"]' != "") {
            $(function () {
                $("#message").show();
                $(".alert-link").show();
            })
        };
        if ('@TempData["class1"]' != "") {
            $(function () {
                $("#message1").show();
            })
        };
    }
</script>

