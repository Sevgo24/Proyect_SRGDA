@{
    ViewBag.Title = "APDAYC :: WORKFLOW ACCIÓN";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Workflow Acción</title>

    <script src="@Url.Content("~/Scripts/SGRDA/WorkFlow/mantenimiento.accion.nuevo.js")"></script>
    <script src="@Url.Content("~/Scripts/SGRDA/generales.js")"></script>
    <script src="@Url.Content("~/Scripts/SGRDA/comun.dropdownlist.js")"></script>
        
    <link rel="stylesheet" href="@Url.Content("~/Scripts/Extensiones/alerts/themes/alertify.core.css")" />
    <link rel="stylesheet" href="@Url.Content("~/Scripts/Extensiones/alerts/themes/alertify.default.css")" />
    <script src="@Url.Content("~/Scripts/Extensiones/alerts/lib/alertify.min.js")"></script>

    <style>
        li.ui-state-default.ui-state-hidden[role=tab]:not(.ui-tabs-active) {
            display: none;
        }
    </style>

    <style>
        .ui-autocomplete {
            max-height: 200px;
            overflow-y: auto;
            /* prevent horizontal scrollbar */
            overflow-x: hidden;
        }
        /* IE 6 doesn't support max-height
   * we use height instead, but this forces the menu to always be this tall
   */
        * html .ui-autocomplete {
            height: 200px;
        }

        ul.ui-autocomplete {
            z-index: 1100;
        }
    </style>
</head>
<body>
    <div>


        <table width='100%' border='0' cellspacing='0' cellpadding='0'>
            <tr>
                <td style="vertical-align: bottom;">

                   
                    <input id="hidOpcionEdit" type="hidden" />
                    <input id="hidBpsId" type="hidden" />
                </td>
            </tr>
            <tr>
                <td>
                    <center>
                <table width='98%' border='0' id='FiltroTabla'>
                    <tr>
                        <td  colspan="4"    class="ui-tabs-nav ui-helper-reset ui-helper-clearfix ui-widget-header ui-corner-all">
                            <table border="0" style=" width:100%;">
                                <tr>
                                    <td>
                                        <div id='divTituloPerfil'>WorkFlow - Nueva Acción de Proceso</div>
                                    </td>
                                    <td> 
                                        <div style="float: right;">
                                             <button id="btnVolver"  class="boton" name="btnVolver">Volver 
                                            <img src="@Url.Content("~/Images/botones/back.png")" width="24" /></button> 
                                            
                                             &nbsp;
                                            <button id="btnNuevo"  class="boton" name="btnNuevo">Nuevo  
                                            <img src="@Url.Content("~/Images/botones/neo.png")" width="24" /></button>

                                            &nbsp;
                                            <button id="btnGrabar"  class="boton" name="btnGrabar">Grabar  
                                            <img src="@Url.Content("~/Images/botones/save.png")" width="24" /></button>  
                                        </div>
                                    </td>
                                </tr>
                            </table>
                        </td>
                    </tr>
                    <tr>
                        <td>Nombre :</td>
                        <td colspan="4"><input type='text' id='txtNombre'  class="requerido"  name='txtNombre' style="width:525px"/></td>
                    </tr>
                    <tr>  
                        <td> Etiqueta :</td>
                        <td colspan="4"><input type='text' id='txtEtiqueta'   class="requerido"  name='txtEtiqueta' style="width:350px"/></td>
                    </tr>
                    <tr>
                        <td> Descripción Detallada :</td>
                        <td colspan="4"><textarea id="txtDescripcion" maxlength="580" rows="2" cols="65" ></textarea></td>
                    </tr>
                    <tr>
                        <td >Tipo de Acción :</td>
                        <td ><select id="ddlAccion" class="requerido"></select></td>
                        <td style="width:160px">Tipo de Dato :</td>
                        <td><select id="ddlDato"></select></td>
                    </tr>
                    <tr>
                        <td style="width:130px"> Proceso :</td>
                        <td style="width:220px"><select id="ddlProceso"></select></td>
                        <td >
                           <label><input type="checkbox" id="chkAccion" style="width:50px"/>Acción Automática</label>  
                        </td>
                    </tr>
                    <tr>
                        <td  colspan="4" >
                            <div id="tabs">
                                    <ul>
                                    <li><a href="#tabs-1">Agentes</a></li>
                                    </ul>
                                    <div id="tabs-1">
                                        <table style=" width:100%;" border="0">
                                        <tr>
                                            <td colspan="4">
                                                        <div><img src="~/Images/botones/add.png" class="addAgente" height="30"></div>
                                                    <div style=" margin-top:-30px; margin-left:30px;"> <a href="#" class="addAgente">Agregar Agente</a></div>
                                                <hr />                                                  
                                            </td>
                                        </tr>
                                            <tr>
                                                <td colspan="4"> 
                                                    <div id="gridAgente"></div>
                                                </td>
                                            </tr>
                                        </table>
                                    </div>
                            </div>
                        </td>
                    </tr>
                </table>
            </center>
                </td>
            </tr>
            <tr>
                <td style='height: 30px;'>
                    <center>
                <div id='error' style=" width: 100% ; vertical-align:  middle; ">
                </div>
            </center>
                </td>
            </tr>
        </table>
    </div>
    <div title="Agregar Agente" id="mvAgente">
        <table width='100%' border='0' id='FiltroTablaPopDet'>
            <tr>
                <td>Agente (seguridad) :</td>
                <td>
                    <input type="hidden" id="hidAccionAge" />
                    <input type="hidden" id="hidEdicionAge" />
                    <select id="ddlAgente"></select>
                </td>
            </tr>
            <tr>
            <td colspan="2">
                <center><div id="avisoAgente" style=" width: 100% ; vertical-align:  middle; "></div></center>
            </td>
        </tr>
        </table>
    </div>
</body>
</html>
