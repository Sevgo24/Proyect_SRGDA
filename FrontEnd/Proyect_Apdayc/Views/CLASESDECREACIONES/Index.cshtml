<script src="@Url.Content("~/Scripts/Base/modModal.js")"></script>

<link href="@Url.Content("~/Content/bootstrap/css/bootstrap.css")" rel="stylesheet" />
<script src="@Url.Content("~/Content/bootstrap/js/bootstrap.js")"></script>
<script src="@Url.Content("~/Content/bootstrap/js/bootbox.min.js")"></script>

<link href="~/Style/SRGDA.css" rel="stylesheet" />
<link href="@Url.Content("~/Content/styles/kendo.common.min.css")" rel="stylesheet" />



<br />
<table style="width: 100%">
    <tr>
        <td>
            <div id='divTitulo'>Clases de Creaciones</div>           
        </td
    </tr>
    
    <tr>
        <td style="vertical-align: top; height: 10px !important;"></td>
    </tr>
    <tr>
        <td>
            <center>
                <table width='98%' border='0' id='FiltroTabla'   >
                   
                     <tr>
                         <td style="width:20% ;padding-left:2%;padding-top:1%  " >
                            @Html.LabelFor(model => model.CLASS_COD) :
                        </td>
                         <td style="padding-top:1%  " >
                            @Html.TextBoxFor(model => model.CLASS_COD, htmlAttributes: new { id = "CLASS_COD", style = "width:60px;" })
                            @Html.ValidationMessageFor(model => model.CLASS_COD)
                        </td>

                         
                           @if (ViewData.ContainsKey("Lista_Tipodocumento"))
                            { 
                              <td style="width:20% ;padding-left:2%;padding-top:1%  " >
                                @Html.Label("TIPO DOCUMENTO")<br />
                            </td>
                             <td style="padding-top:1%  " >
                              @Html.DropDownList("Lista_Tipodocumento", ViewData["Lista_Tipodocumento"] as List<SelectListItem>, new { style = "width:160px", ViewData.Values, id = "cb1" })                                  
                            </td>
                            }

                          <td style="padding-left:2%" >    
                                  <div style=" text-align:center;">                             
                                     <button id="btnBusqueda" class="boton"  >
                                           <img src="@Url.Content("~/Images/botones/buscar2.png")" width="16px" />
                                        Buscar
                                    </button> 
                                </div>
                        </td>

                    <tr>
                           
                           <td style="width:20% ;padding-left:2% ;" >
                            @Html.LabelFor(model => model.COD_PARENT_CLASS) :
                        </td>
                         <td>
                            @Html.TextBoxFor(model => model.COD_PARENT_CLASS, htmlAttributes: new { id = "COD_PARENT_CLASS", style = "width:100px;" })
                            @Html.ValidationMessageFor(model => model.COD_PARENT_CLASS)
                        </td>
                       

                    </tr>

                </table>
            </center>
        </td>
    </tr>

    <tr>
        <td style="padding-right: 8%">

            <div style="float: right;">
                 <div class="btn-group">
                <button type="button" class="btn btn-success"><i class="glyphicon glyphicon-tasks"></i>&nbsp;Mas</button>
                <button type="button" class="btn btn-success dropdown-toggle" data-toggle="dropdown">
                    <span class="caret"></span>
                    <span>&nbsp;</span>

                </button>
                <ul class="dropdown-menu" role="menu">
                    <li><a href="@Url.Action("../CLASESDECREACIONES/DownloadReport", "CLASESDECREACIONES", new { format = "PDF" })" target="_blank"><i class="glyphicon glyphicon-save"></i>&nbsp;Vista Previa PDF</a></li>
                    <li><a href="@Url.Action("../CLASESDECREACIONES/DownloadReport", "CLASESDECREACIONES", new { format = "EXCEL" })" target="_blank"><i class="glyphicon glyphicon-save"></i>&nbsp;Vista Previa EXCEL</a></li>
                </ul>
            </div>


              
            </div>
        </td>
    </tr>

    <tr>
        <td>
            <div id="listado"></div>
        </td>
    </tr>


