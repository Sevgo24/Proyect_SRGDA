<body>
    <div>
        <div id="ContenedormvBuscarSocioCampania"></div>

        <table width='100%' border="0" cellspacing="0" cellpadding='0'>
            <tr>
                <td style="text-align: left" colspan="2">
                    <div id="divTitulo">Consulta de Campañas</div>
                    <input type="hidden" id="hidOpcionEdit" />
                    <input id="hidCodigo" type="hidden" />
                    <br />
                </td>
            </tr>

            <table border="0" style="width: 98%" class="contenedor">
                <tr>
                    <td style="width: 110px">Cetro de Contacto</td>
                    <td style="width: 100px">
                        <select id="ddlCentroContacto" style="width: 170px" /></td>
                </tr>
                <tr>
                    <td>Tipo de Campaña</td>
                    <td>
                        <select id="ddlTipoCampania" style="width: 170px" /></td>
                    <td style="width: 110px">Estado Campaña</td>
                    <td>
                        <select id="ddlEstadoCampania" style="width: 140px" /></td>
                </tr>
                <tr>
                    <td>Nombre</td>
                    <td colspan="10">
                        <input id="txtNombre" style="width: 285px" maxlength="60" /></td>
                </tr>
                <tr>
                    <td>Perfil Cliente</td>
                    <td>
                        <select id="ddlPerfilCliente" /></td>
                </tr>
                <tr>
                    <td>Fecha Inicial</td>
                    <td>
                        <input id="txtFechaIni" /></td>
                    <td>Fecha Final</td>
                    <td>
                        <input id="txtFechaFin" /></td>
                </tr>
                <tr>
                    <td>Estado</td>
                    <td>
                        <select id="ddlEstado" /></td>
                </tr>
                <tr>
                    <td style="text-align: right" colspan="4">
                        <button id='btnBuscar' class="boton" name='btnBuscar'>
                            Buscar
                            <img src="@Url.Content("~/Images/botones/buscar2.png")" width="16px" /></button>
                        &nbsp;
                        <button id='btnLimpiar' class="boton" name='btnLimpiar'>
                            Limpiar
                            <img src="@Url.Content("~/Images/botones/refresh.png")" width="16px" /></button><br />
                        <br />
                    </td>
                </tr>
            </table>

            <table border="0" style="width: 98%">
                <tr>
                    @*<td style='height: 40px; vertical-align: bottom; width: 95%' colspan="20">
                    <div style="float: right;">
                        <div class="btn-group">
                            <button type="button" class="btn btn-success"><i class="glyphicon glyphicon-tasks"></i>&nbsp;Mas</button>
                            <button type="button" class="btn btn-success dropdown-toggle" data-toggle="dropdown">
                                <span class="caret"></span>
                                <span>&nbsp;</span>
                            </button>
                            <ul class="dropdown-menu" role="menu">
