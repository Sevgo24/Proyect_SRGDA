                                <li><a href="#" onclick="return redirecto('EXCEL');"><i class="glyphicon glyphicon-save"></i>&nbsp;Vista Previa EXCEL</a></li>
                            </ul>
                        </div>
                    </div>
                </td>*@
                    <td style='height: 40px; vertical-align: bottom; width: 20%' colspan="20">
                        <div style="float: right;">
                            <img src="@Url.Content("~/Images/botones/nuevo.png")" alt="Registrar nuevo centro de contacto." title="Registrar nuevo centro de contacto." id="btnNuevo"/>&nbsp;
                            <img src="@Url.Content("~/Images/botones/delete.png")" alt="Inactivar centro de contacto." title="Inactivar centro de contacto."  id="btnEliminar"/>
                        </div>
                    </td>
                </tr>
                <tr>
                    <td colspan="21">
                        <div id="gridCampaniaCallCenter"></div>
                    </td>
                </tr>
            </table>
        </table>
    </div>

    @*ver clientes asignados*@
    <div id="mvAsignados">
        <table border="0" style="width: 100%">
            <tr>
                <td>
                    <div id="gridAsignados"></div>
                </td>
            </tr>
        </table>
    </div>
</body>
</html>
