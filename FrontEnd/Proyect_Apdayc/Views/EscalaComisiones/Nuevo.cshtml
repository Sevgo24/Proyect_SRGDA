@{
    ViewBag.Title = "APDAYC :: Comisiones";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Escala de Comisiones</title>

    <style>
        #tblCaracteristica {
            border: 1px solid #CCC;
            height: 50px;
            border-radius: 6px;
        }
    </style>

    <link href="~/Scripts/Extensiones/jquery-ui-1.10.4/css/redmond/jquery-ui-1.10.4.custom.css" rel="stylesheet" />
    <link href="~/Style/SRGDA.css" rel="stylesheet" />

    <link href="@Url.Content("~/Content/styles/kendo.common.min.css")" rel="stylesheet" />
    <script src="@Url.Content("~/Scripts/js/jquery.min.js")"></script>
    <script src="@Url.Content("~/Scripts/js/kendo.web.min.js")"></script>
    <script src="@Url.Content("~/Scripts/Extensiones/jquery-ui-1.10.4/js/jquery-ui-1.10.4.custom.js")"></script>

    <script src="@Url.Content("~/Scripts/SGRDA/Comision/Comision.escala.nuevo.js")"></script>
    <script src="@Url.Content("~/Scripts/SGRDA/generales.js")"></script>
    <script src="@Url.Content("~/Scripts/js/cultures/kendo.culture.es-PE.min.js")"></script>
    <script src="@Url.Content("~/Scripts/SGRDA/comun.dropdownlist.js")"></script>

    <link rel="stylesheet" href="@Url.Content("~/Scripts/Extensiones/alerts/themes/alertify.core.css")" />
    <link rel="stylesheet" href="@Url.Content("~/Scripts/Extensiones/alerts/themes/alertify.default.css")" />
    <script src="@Url.Content("~/Scripts/Extensiones/alerts/lib/alertify.min.js")"></script>

    <style>
        li.ui-state-default.ui-state-hidden[role=tab]:not(.ui-tabs-active) {
            display: none;
        }
    </style>

</head>

<body>
    <div>
        <div id="ContenedormvBuscarSocio"></div>
        <br />
        <table width='98%' border='0' cellspacing='0' cellpadding='0'>
            <tr>
                <td style="vertical-align: bottom;">
                    <input id="hidId" type="hidden" />
                    <input id="hidOpcionEdit" type="hidden" />
                </td>
            </tr>

            <tr id="trMenu">
                <td>
                    <table width='98%' border="0" id='FiltroTablaPop'>
                        <tr>
                            <td colspan="4" style="text-align: right;" class="ui-tabs-nav ui-helper-reset ui-helper-clearfix ui-widget-header ui-corner-all">
                                <table width='100%' border='0' id='FiltroTabla'>
                                    <tr>
                                        <td style="width: 500px; text-align: left;">
                                            <div id='divTituloPerfil'>Escala de Comisiones</div>
                                        </td>
                                        <td colspan="1">
                                            <button id='btnDescartar' class="boton" name='btnDescartar'>
                                                Volver 
                                                                    <img src="/Images/botones/back.png" width="14px" /></button>
                                            &nbsp;
                                                                    <button id='btnNuevo' class="boton" name='btnNuevo'>
                                                                        Nuevo 
                                                                    <img src="/Images/botones/neo.png" width="14px" /></button>
                                            &nbsp;
                                                                    <button id='btnGrabar' class="boton" name='btnGrabar'>
                                                                        Grabar 
                                                                    <img src="/Images/botones/save.png" width="14px" /></button>
                                        </td>
                                    </tr>
                                </table>
                            </td>
                        </tr>
                    </table>
                </td>
            </tr>

            <tr><td><br /></td></tr>

            <tr id="trCabeceraEscala">
                <td>
                    <div id="divCabeceraEscala" class="contenedor">                                
                            <table style="width: 100%; padding-left: 30px" border="0">                          
                                <tr id="trId">
                                    <td>Id :</td>
                                    <td colspan="10"><input type="text" id="txtId" value="0" style="width:50px;background-color:rgb(255, 252, 196)" readonly /></td>
                                </tr> 
                                <tr>
                                    <td>Descripción :</td>
                                    <td colspan="10"><input type="text" id="txtEscalaDescripcion" class="requerido" style="width:550px" /></td>
                                </tr> 
                                <tr><td  colspan="10"><hr /></td></tr>   
                                <tr>
                                    <td>Acumula Escala :</td>
                                    <td>
                                        <input type="checkbox" id="chkAcumulaEscala"   />
                                    </td>
                                    <td>Tipo de Acumulación :                                        
                                    </td>
                                    <td>
                                        <input type="radio" id="rbtModalidad" value="M" name="rbtTipoAcumulacion" class="rbtTipoAcumulacion"/>Modalidad &nbsp&nbsp
                                        <input type="radio" id="rbtTotal" value="T" name="rbtTipoAcumulacion" class="rbtTipoAcumulacion"/> Totales
                                    </td>
                                </tr>                  
                                <tr>
                                    <td style="width:140px">
                                        Transacción Inicial :
                                    </td>        
                                    <td style="width:140px">
                                        <input type="text" id="txttranInicial" class="requerido" value="0" style="width:50px"   />
                                    </td>
                                    <td style="width:140px">
                                        Transacción Final :                                         
                                    </td>
                                    <td>
                                        <input type="text" id="txttranfinal" class="requerido" value="0" style="width:50px"   />
                                    </td>
                                </tr>
                            </table>
                    </div>
                </td>                                        
            </tr>

            <tr><td><br></td></tr>
             <tr id="trDetalleEscala">
                <td>
                    <table style="width: 100%" border="0" id="FiltroTabla">
                        <tr>
                            <td >
                                <div>
                                    <img src="~/Images/botones/add.png" class="addEscalaRango" height="30">
                                </div>
                                <div style="margin-top: -30px; margin-left: 30px;"><a href="#" class="addEscalaRango" style="color: black">Agregar Escala</a></div>
                                <hr />
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <input id="hidEscalaRango" type="hidden" />
                                <div id="gridEscalaRango"></div>
                            </td>
                        </tr>
                    </table>
                </td>
            </tr>
        </table>
    </div>
    
    <div title="Agregar Escala" id="mvEscalaRangos">
            <table width='100%' border='0' id='FiltroTablaPopObs'>       
                <input type="text" id="hidIdEscalaRango" />
                <tr>
                    <td >Orden de escala :</td>
                    <td> <input type="text" id="txtOrden" style="width:40px;background-color:rgb(255, 252, 196)"/>                    </td>
                </tr>
                <tr>
                    <td>Desde :</td>
                    <td>
                        <input type="text" id="txtRangoInicial"  style="width:100px" />
                    </td>
                    <td>Hasta :</td>
                    <td>
                        <input type="text" id="txtRangoFinal" style="width:100px" />
                    </td>
                </tr>

                <tr>
                    <td style="width:120px">Tipo :</td>
                    <td>                        
                        <input type="radio" id="rbtValor"      value="V" name="escalaValor" class="escalaValor"/>Valor
                        <input type="radio" id="rbtPorcentaje1"      value="P" name="escalaValor" class="escalaValor"/>Porcentaje
                    </td>
                </tr>
                <tr>
                    <td ></td>
                    <td>
                        <input type="text" id="txtValor" style="width:100px" />
                    </td>
                </tr>


            </table>
        </div>   
     
</body>
</html>

