@model SGRDA.Entities.BEREC_MOD_GROUP

@{
    ViewBag.Title = "APDAYC :: GRUPO DE MODALIDAD DE USO";
    Layout = "~/Views/Shared/_Layout.cshtml"; 
}

@using (Html.BeginForm(FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <p>
        <input type="hidden" id="mogid" name="taxid" value="@Html.DisplayFor(model => model.MOG_ID)"/>
    </p>
}

<script type="text/ecmascript">

    if ('@TempData["msg"]' != "") {
        $(function () {
            $("#message").show();
            $(".alert-link").show();
        })
    };

</script>

<br />

<div id="message">
    <div class="@TempData["class"]">
        <a id="lnk" href="#" class="alert-link">OK! </a>@TempData["msg"]
    </div>
</div>

