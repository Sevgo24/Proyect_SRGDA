@model SGRDA.Entities.BEREC_TAX_ID
@{
    ViewBag.Title = "APDAYC :: DOCUMENTOS DE IDENTIFICACIÓN";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<link href="@Url.Content("~/Content/bootstrap/css/bootstrap.css")" rel="stylesheet" />

<script>

    $(function () {
        $(".alert-link").hide();
        $("#message").hide();
        $("#message1").hide();
        $("#TAXN_NAME").focus();
    });
</script>

<style type="text/css">
    textarea {
        resize: none;
    }
</style>

