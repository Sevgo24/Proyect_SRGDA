@{
    ViewBag.Title = "APDAYC :: VALORES DE IMPUESTOS";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Valores de los Impuestos</title>

    <script src="@Url.Content("~/Scripts/SGRDA/generales.js")"></script>
    <script src="@Url.Content("~/Scripts/SGRDA/comun.dropdownlist.js")"></script>
    <script src="@Url.Content("~/Scripts/SGRDA/popup.direccion.js")"></script>
    <script src="@Url.Content("~/Scripts/SGRDA/Mantenimientos/mantenimiento.impuestovalor.js")"></script>

    <link rel="stylesheet" href="@Url.Content("~/Scripts/Extensiones/alerts/themes/alertify.core.css")" />
    <link rel="stylesheet" href="@Url.Content("~/Scripts/Extensiones/alerts/themes/alertify.default.css")" />
    <script src="@Url.Content("~/Scripts/Extensiones/alerts/lib/alertify.min.js")"></script>

    <style>
        li.ui-state-default.ui-state-hidden[role=tab]:not(.ui-tabs-active) {
            display: none;
        }
    </style>
</head>
<body>
   <div>
        <table style="width: 100%">
            <tr>
                <td>
                    <div id="divTitulo">Impuestos</div>
                </td>
            </tr>

            <tr>
                <td>
                    <hr />
                </td>
            </tr>
            <tr>
                <td>
                    <center>
                        <table style="width:98%" id="FiltroTabla"  border="0">
                            <tr>
                                <td style="width:150px; padding-left:30px" >
                                    Ingrese Descripción :
                                </td>
                                <td >
                                    <input type="text" id="txtDescripcion" maxlength="40" style="width:250px" placeholder="Ingrese descripción" />
                                </td>                                
                               <td> Estado :</td>
                                <td>
                                    <select name="ddlEstado" id="ddlEstado">
                                    </select>
                                </td>
                                <td style="text-align:right">
                                     <button id='btnBuscar'  class="boton" name='btnBuscar'>Buscar 
                                    <img src="@Url.Content("~/Images/botones/buscar2.png")" width="16px" /></button> 
                                    &nbsp;&nbsp;

                                    <button id='btnLimpiar'  class="boton" name='btnLimpiar'>Limpiar 
                                    <img src="@Url.Content("~/Images/botones/refresh.png")" width="16px" /></button> 
                                </td>
                            </tr> 
                            <tr>
                                <td style="width:150px; padding-left:30px" >
                                    Territorio :
                                    
                                </td>
                                <td>
                                    <select id="ddlTerritorio" ></select>
                                </td>
                            </tr>                          
                        </table>
                    </center>
                </td>
            </tr>

            <tr>
                <td style='height: 40px; vertical-align: bottom;'>
                    <div style="float: right;">
                        <img src="@Url.Content("~/Images/botones/nuevo.png")" alt="Registrar nueva sociedad." title="Registrar nueva sociedad." id="btnNuevo"/>&nbsp;
                                        <img src="@Url.Content("~/Images/botones/delete.png")" alt="Inactivar datos de sociedad." title="Inactivar datos de sociedad."  id="btnEliminar"/>
                        &nbsp; 
                    </div>
                </td>
            </tr>
            <tr>
                <td>
                    <div id="grid"></div>
                </td>
            </tr>
        </table>
    </div>
</body>
</html>
