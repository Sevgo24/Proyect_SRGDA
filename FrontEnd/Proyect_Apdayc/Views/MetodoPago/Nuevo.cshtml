@{
    ViewBag.Title = "APDAYC :: METODO DE PAGO";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Método de Pago</title>


    <link href="~/Scripts/Extensiones/jquery-ui-1.10.4/css/redmond/jquery-ui-1.10.4.custom.css" rel="stylesheet" />
    <link href="~/Style/SRGDA.css" rel="stylesheet" />

    <link href="@Url.Content("~/Content/styles/kendo.common.min.css")" rel="stylesheet" />
    <script src="@Url.Content("~/Scripts/js/jquery.min.js")"></script>
    <script src="@Url.Content("~/Scripts/js/kendo.web.min.js")"></script>
    <script src="@Url.Content("~/Scripts/Extensiones/jquery-ui-1.10.4/js/jquery-ui-1.10.4.custom.js")"></script>
    <script src="@Url.Content("~/Scripts/SGRDA/comun.dropdownlist.js")"></script>
    <script src="@Url.Content("~/Scripts/SGRDA/Mantenimientos/mantenimiento.MetodoPago.nuevo.js")"></script>
    <script src="@Url.Content("~/Scripts/SGRDA/generales.js")"></script>

    <link rel="stylesheet" href="@Url.Content("~/Scripts/Extensiones/alerts/themes/alertify.core.css")" />
    <link rel="stylesheet" href="@Url.Content("~/Scripts/Extensiones/alerts/themes/alertify.default.css")" />
    <script src="@Url.Content("~/Scripts/Extensiones/alerts/lib/alertify.min.js")"></script>

    <style>
        li.ui-state-default.ui-state-hidden[role=tab]:not(.ui-tabs-active) {
            display: none;
        }
    </style>

</head>
<body>
    <br />
    <div title="Nuevo Uso repertorio">

        <table width='100%' border="0" cellspacing='0' cellpadding='0'>
            <tr>
                <td style="vertical-align: bottom">
                    <input type="hidden" id="hidCodigoMet" />
                    <input id="hidOpcionEdit" type="hidden" />

                </td>
            </tr>

            <tr>
                <td>
                    <center>

                           <table width='98%' border="0"  id='FiltroTablaPop'>
                                <tr>
                                    <td colspan="4"   class="ui-tabs-nav ui-helper-reset ui-helper-clearfix ui-widget-header ui-corner-all">
                                            <table border="0" style=" width:100%;">
                        <tr>
                            <td>
                                 <div id='divTituloPerfil'>Método de Pago - Nuevo</div>
                            </td>
                            <td> 
                                
                
                 <div style="float: right;">
                                                        <button id='btnDescartar' class="boton" name='btnDescartar'>
                                                            Volver 
                                                        <img src="@Url.Content("~/Images/botones/back.png")" width="24px" /></button>
                                        &nbsp;
                                                        <button id='btnNuevo' class="boton" name='btnNuevo'>
                                                            Nuevo 
                                                        <img src="@Url.Content("~/Images/botones/neo.png")" width="24px" /></button>
                                        &nbsp;
                                                        <button id='btnGrabar' class="boton" name='btnGrabar'>
                                                            Grabar 
                                                        <img src="@Url.Content("~/Images/botones/save.png")" width="24px" /></button>                                        
                                    </div>
                                </td></tr></table>
                                    </td>
                                </tr>
                                <tr >
                                    <td></td>        
                                </tr>

                                <tr>
                                    <td>
                                        <table>
                                              <tr>
                                                <td style="padding-left:30px;width:90px">
                                                    Código :
                                                </td>
                                                <td style="width:150px">
                                                    <input type="text" id="txtCodigo" style="width:120px" maxlength="2" placeholder="Ingrese Código" class="requerido"/>
                                                </td>
                                                <td>
                                                    <div id="divResultValidacionCod"></div>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td style="padding-left:30px;width:90px">
                                                    Descripción :
                                                </td>
                                                <td>
                                                    <input type="text" id="txtDescripcion"  style="width:300px" maxlength="30" placeholder="Ingrese descripción" class="requerido" />
                                                </td>
                                                <td>
                                                    <div id="divResultValidacionDes"></div>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td style="padding-left:30px; width:160px">
                                                    <label style="top:auto">Confirmar Automáticamente</label>                                    
                                                </td> 
                                                <td>
                                                     <input type="checkbox" id="chk"/>
                                                </td>
                                            </tr>
                                        </table>
                                </td>    
                                </tr>
                            </table>
                    </center>
                </td>
            </tr>

            <tr>
                <td colspan="4" style="text-align: center">
                    <div id='aviso'></div>
                </td>
            </tr>

        </table>
    </div>
</body>
</html>
