</style>

<script>
    $(function () {
        var url;
        url = $(this).attr("href");

        $(".alert-link").hide();
        $("#message").hide();

        //combos
        $("#DECON_ID").show();
        $("#DECON_ID").attr("disabled", "enabled");
        $("#DECON_ID").css('color', '#333333').css('border', '1px solid gray').css('background-color', 'rgb(235, 235, 228)');

        $("#nombre").hide();
        $("#std").hide();
        $("#descripcion").attr("disabled", "enabled");
        $("#btnSave").hide();
        $("#btncancel").hide();

        $("#btnedit").click(function () {
            $("#btnSave").show();
            $("#btncancel").show();
            $("#btnnuevo").hide();
            $("#dnombre").hide();
            $("#dstd").hide();
            $("#btnNeo").hide();

            $("#nombre").show();
            $("#std").show();

            $("#ECON_DESC").hide();
            $("#DECON_ID").show();
            $("#DECON_ID").css('color', '#333333').css('border', '1px solid gray').css('background-color', 'white');
            $("#DECON_ID").removeAttr('disabled');
            $("#descripcion").removeAttr('disabled');
            $("#btnedit").hide();
            $("#ESTT_ID").attr('disabled');
            $("#DESCRIPTION").focus();

            return false;
        })

        $("#btncancel").click(function () {
            $("#btnSave").hide();
            $("#btnnuevo").show();
            $("#dnombre").show();
            $("#dstd").show();

            $("#nombre").hide();
            $("#std").hide();

            $("#descripcion").attr("disabled", "enabled");
            $("#btnedit").show();
            $("#btncancel").hide();

            $("#ECON_DESC").hide();
            $("#DECON_ID").show();
            $("#DECON_ID").css('color', '#333333').css('border', '1px solid gray').css('background-color', 'rgb(235, 235, 228)');
            $("#DECON_ID").attr("disabled", "enabled");
            location.reload();

            return false;
        })
    });
</script>

