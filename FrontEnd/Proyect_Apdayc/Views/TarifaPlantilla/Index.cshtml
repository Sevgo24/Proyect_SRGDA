@{
    ViewBag.Title = "APDAYC :: Tarifa Plantilla";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Plantilla de Tarifa</title>

    <link href="~/Scripts/Extensiones/jquery-ui-1.10.4/css/redmond/jquery-ui-1.10.4.custom.css" rel="stylesheet" />
    <link href="~/Style/SRGDA.css" rel="stylesheet" />

    <link href="@Url.Content("~/Content/styles/kendo.common.min.css")" rel="stylesheet" />
    <script src="@Url.Content("~/Scripts/js/jquery.min.js")"></script>
    <script src="@Url.Content("~/Scripts/js/kendo.web.min.js")"></script>
    <script src="@Url.Content("~/Scripts/Extensiones/jquery-ui-1.10.4/js/jquery-ui-1.10.4.custom.js")"></script>
    
    <script src="@Url.Content("~/Scripts/SGRDA/generales.js")"></script>
    <script src="@Url.Content("~/Scripts/SGRDA/comun.dropdownlist.js")"></script>
    <script src="@Url.Content("~/Scripts/js/cultures/kendo.culture.es-PE.min.js")"></script>
    <script src="@Url.Content("~/Scripts/SGRDA/Tarifa/tarifa.plantilla.js")"></script>

       <link rel="stylesheet" href="@Url.Content("~/Scripts/Extensiones/alerts/themes/alertify.core.css")" />
    <link rel="stylesheet" href="@Url.Content("~/Scripts/Extensiones/alerts/themes/alertify.default.css")" />
    <script src="@Url.Content("~/Scripts/Extensiones/alerts/lib/alertify.min.js")"></script>

    <style>
        li.ui-state-default.ui-state-hidden[role=tab]:not(.ui-tabs-active) {
            display: none;
        }
    </style>

</head>
<body>
    <div>
        <table style="width: 100%">
            <tr>
                <td>
                    <div id="divTitulo">Plantilla de Tarifa</div>
                </td>
            </tr>

            <tr>
                <td>
                    <hr />
                </td>
            </tr>
            <tr>
                <td>
                    <center>
                        <table style="width:98%" id="FiltroTabla"  border="0">
                            <tr>
                                <td style="width:150px; padding-left:30px" >
                                    Ingrese descripción :
                                </td>
                                <td  style="width:300px" colspan="3">
                                    <input type="text" id="txtDescripcion" maxlength="150" style="width:450px" placeholder="Ingrese descripción" />
                                </td>
                               
                               
                                <td style="widows:150">
                                    <table style="width:100%" border="0">
                                        <tr>
                                            <td>
                                                 N° Caracteristicas
                                                &nbsp&nbsp
                                                <input type="text" id="txtNumero"  style="width:40px" maxlength="1" />
                                                &nbsp&nbsp
                                            </td>
                                            <td style="text-align:right">
                                                <button id='btnBuscar'  class="boton" name='btnBuscar'>Buscar 
                                                <img src="@Url.Content("~/Images/botones/buscar2.png")" width="16px" /></button> 
                                                &nbsp;&nbsp;

                                                <button id='btnLimpiar'  class="boton" name='btnLimpiar'>Limpiar 
                                                <img src="@Url.Content("~/Images/botones/refresh.png")" width="16px" /></button> 
                                            </td>
                                        </tr>
                                    </table>
                                </td>
                            </tr>            
                            <tr>
                                <td  style="padding-left:30px" >
                                    Fecha ini:
                                </td>
                                <td>
                                    <input type="text" id="txtFechaIni"/>
                                </td>
                                <td>
                                    Fecha fin:
                                </td>
                                <td>
                                    <input type="text" id="txtFechaFin"/>
                                </td>
                                 <td> Estado : 
                                     &nbsp
                                       <select name="ddlEstado" id="ddlEstado">
                                    </select>
                                 </td>
                            </tr>           
                            <tr>
                                <td  style="padding-left:30px" >
                                    Con Fecha :
                                </td>
                                <td>
                                    <input type="checkbox" id="chkConFecha" checked />
                                </td>
                            </tr>    
                        </table>
                    </center>
                </td>
            </tr>

            <tr>
                <td style='height: 40px; vertical-align: bottom;'>
                    <div style="float: right;">
                        <img src="@Url.Content("~/Images/botones/nuevo.png")" alt="Registrar nueva sociedad." title="Registrar nueva sociedad." id="btnNuevo"/>&nbsp;
                                        <img src="@Url.Content("~/Images/botones/delete.png")" alt="Inactivar datos de sociedad." title="Inactivar datos de sociedad."  id="btnEliminar"/>
                        &nbsp; 
                    </div>
                </td>
            </tr>
            <tr>
                <td>
                    <div id="grid"></div>
                </td>
            </tr>
        </table>
    </div>
</body>
</html>
