@{
    ViewBag.Title = "APDAYC :: TIPO USO DE REPERTORIO";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Tipo uso del repertorio</title>
    <link href="~/Scripts/Extensiones/jquery-ui-1.10.4/css/redmond/jquery-ui-1.10.4.custom.css" rel="stylesheet" />
    <link href="~/Style/SRGDA.css" rel="stylesheet" />

    <link href="@Url.Content("~/Content/styles/kendo.common.min.css")" rel="stylesheet" />
    <script src="@Url.Content("~/Scripts/js/jquery.min.js")"></script>
    <script src="@Url.Content("~/Scripts/js/kendo.web.min.js")"></script>
    <script src="@Url.Content("~/Scripts/Extensiones/jquery-ui-1.10.4/js/jquery-ui-1.10.4.custom.js")"></script>
    <script src="@Url.Content("~/Scripts/SGRDA/Mantenimientos/mantenimiento.TipoUsoRepertorio.js")"></script>
    <script src="@Url.Content("~/Scripts/SGRDA/generales.js")"></script>
    <script src="@Url.Content("~/Scripts/SGRDA/comun.dropdownlist.js")"></script>

    <link rel="stylesheet" href="@Url.Content("~/Scripts/Extensiones/alerts/themes/alertify.core.css")" />
    <link rel="stylesheet" href="@Url.Content("~/Scripts/Extensiones/alerts/themes/alertify.default.css")" />
    <script src="@Url.Content("~/Scripts/Extensiones/alerts/lib/alertify.min.js")"></script>

    <style>
        li.ui-state-default.ui-state-hidden[role=tab]:not(.ui-tabs-active) {
            display: none;
        }
    </style>
</head>
<body>
    <div>
        <table style="width: 100%">
            <tr>
                <td>
                    <div id='divTitulo'>Tipos de Uso del Repertorio</div>
                    <input id="hidOpcionEdit" type="hidden" />
                </td>
            </tr>

            <tr>
                <td>
                    <hr />
                </td>
            </tr>

            <tr>
                <td>
                    <center>
                        <table width='98%' border='0' id='FiltroTabla'>
                            <tr>
                                <td style="width:200px; padding-left:30px" >
                                            Nombre de Tipo uso repertorio :
                                        </td>

                                        <td style="width:300px">
                                            <input type="text" id="txtDescripcion" maxlength="40" style="width:250px" placeholder="Ingrese Tipo uso repertorio" />
                                        </td>                       
                                </tr> 
                                <tr>
                                    <td style="width:200px; padding-left:30px">Estado :</td>
                                    <td>
                                        <select name="ddlEstado" id="ddlEstado">
                                        </select>
                                    </td>
                                    <td colspan="5" style="text-align:right">
                                        <button id='btnBuscar'  class="boton" name='btnBuscar'>Buscar 
                                        <img src="@Url.Content("~/Images/botones/buscar2.png")" width="16px" /></button> 
                                        &nbsp;&nbsp;
                                        <button id='btnLimpiar'  class="boton" name='btnLimpiar'>Limpiar 
                                        <img src="@Url.Content("~/Images/botones/refresh.png")" width="16px" /></button>                                             
                                    </td>   
                                </tr>                                                                 
                        </table>
                    </center>
                </td>
            </tr>

            <tr>
                <td style='height: 40px; vertical-align: bottom;'>
                    <div style="float: right;">
                        <img src="@Url.Content("~/Images/botones/nuevo.png")" alt="Registrar nueva tipo uso repertorio." title="Registrar nueva tipo uso repertorio." id="btnNuevo"/>&nbsp;
                                        <img src="@Url.Content("~/Images/botones/delete.png")" alt="Inactivar datos de tipo uso repertorio." title="Inactivar datos de tipo uso repertorio."  id="btnEliminar"/>
                        &nbsp; 
                    </div>
                </td>
            </tr>
            <tr>
                <td>    
                    <div id="grid"></div>
                </td>
            </tr>
        </table>
    </div>
</body>
</html>
