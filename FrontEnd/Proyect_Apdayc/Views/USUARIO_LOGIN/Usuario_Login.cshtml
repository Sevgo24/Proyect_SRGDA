	<meta charset="utf-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
<link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css"  />
</head>
     
<script>
        $(function () {
            $(".alert-link").hide();
            $("#message").hide();
            $("#message1").hide();
        });
</script>

@using (Html.BeginForm(FormMethod.Post))
