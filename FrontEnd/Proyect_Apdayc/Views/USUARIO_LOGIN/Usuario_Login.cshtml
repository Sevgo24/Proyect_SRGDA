                            </table>
                        </td>
                    </tr>
                    <tr>
                        <td width="47"></td>
                        <td width="861" background="Content/img/isilnet_line.gif" style="background-repeat:repeat-x">
                            <img src="img/spacer.gif" width="1" height="2">
                        </td>
                        <td width="47"></td>
                    </tr>
                    <tr>
                        <td height="74" colspan="3" align="center" valign="middle" bgcolor="black">
                            <img src="Content/img/footer_2014.gif" width="871" height="28">
                        </td>
                    </tr>
                </tbody>
            </table>
                <br />
                <br />
             </div>        
        </div>
</body>
}
</html>

     <div id="message1">
        <div class="@TempData["class1"]">
           @Html.ValidationSummary()
        </div>
     </div>


<script type="text/ecmascript">

    if ('@TempData["msg"]' != "") {
        $(function () {
            $("#message").show();
            $(".alert-link").show();

        })
    };
    if ('@TempData["class1"]' != "") {
        $(function () {
            $("#message1").show();
        })
    };
</script>

