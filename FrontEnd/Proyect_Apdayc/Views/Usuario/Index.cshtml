@{
    ViewBag.Title = "APDAYC :: Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Seguridad - Mantenimiento de usuarios</title>
    <link href="~/Scripts/Extensiones/jquery-ui-1.10.4/css/redmond/jquery-ui-1.10.4.custom.css" rel="stylesheet" />
    <link href="~/Style/SRGDA.css" rel="stylesheet" />


   <link href="@Url.Content("~/Content/styles/kendo.common.min.css")" rel="stylesheet" />
   <script src="@Url.Content("~/Scripts/js/jquery.min.js")"></script>
    
 
   <script src="@Url.Content("~/Scripts/js/kendo.web.min.js")"></script>

   <script src="@Url.Content("~/Scripts/Extensiones/jquery-ui-1.10.4/js/jquery-ui-1.10.4.custom.js")"></script>





  
  <script src="@Url.Content("~/Scripts/SGRDA/Seguridad/seguridad.usuario.js")"></script>
  <script src="@Url.Content("~/Scripts/SGRDA/generales.js")"></script>


    <script src="@Url.Content("~/Scripts/SGRDA/comun.autocompletar.js")"></script>
    <script src="@Url.Content("~/Scripts/SGRDA/comun.dropdownlist.js")"></script>
    <script src="@Url.Content("~/Scripts/SGRDA/comun.buscador.socio.js")"></script>


    <link rel="stylesheet" href="@Url.Content("~/Scripts/Extensiones/alerts/themes/alertify.core.css")" />
    <link rel="stylesheet" href="@Url.Content("~/Scripts/Extensiones/alerts/themes/alertify.default.css")" />
    <script src="@Url.Content("~/Scripts/Extensiones/alerts/lib/alertify.min.js")"></script>

    <style>
        li.ui-state-default.ui-state-hidden[role=tab]:not(.ui-tabs-active) {
            display: none;
        }
    </style>

</head>
<body>
    <div>
      
        <div id="ContenedormvBuscarSocio"></div>
        
<table width='100%' border='0' cellspacing='0' cellpadding='0'>
    <tr>
        <td style=" vertical-align:bottom;">

            <div id='divTitulo'>Mantenimiento de Usuarios</div>
        </td>
    </tr>
    <tr><td  style=" vertical-align: top;"><hr></td></tr>
    <tr>
        <td>
            <center>
                <table width='98%' border='0' id='FiltroTabla'>
                    <tr>
                        <td> Login :</td>
                        <td><input type='text' id='txtLoginSearch' placeholder='Ingrese Login' name='txtLoginSearch' /></td>
                        <td> Apellido :</td>
                        <td><input type='text' id='txtNombreSearch' placeholder='Ingrese Nombre' name='txtNombreSearch' /></td>
                        <td> Estado :</td>
                        <td>
                            <select name="selEstadoSearch" id="selEstadoSearch">
                                <option value="1">Activo</option>
                                <option value="0">Inactivo</option>
                                <option value="999">Todos</option>
                            </select>
                        </td>
                        <td>
                            <button id='btnBuscar'  class="boton" name='btnBuscar'>Buscar 
                            <img src="@Url.Content("~/Images/botones/buscar2.png")" width="16px" /></button> 
                            &nbsp;&nbsp;
                            <button id='btnLimpiar'  class="boton" name='btnLimpiar'>Limpiar 
                            <img src="@Url.Content("~/Images/botones/refresh.png")" width="16px" /></button> 
                        </td>
                    </tr>
                </table>
            </center>       
        </td>
    </tr>
    <tr><td style='height: 40px; vertical-align:bottom;'>
            <div style="float: right;">
                <img src="@Url.Content("~/Images/botones/nuevo.png")" alt="Registrar nuevo usuario." title="Registrar nuevo usuario." id="btnNuevo"/>&nbsp;
                <img src="@Url.Content("~/Images/botones/delete.png")" alt="Inactivar datos de usuario." title="Inactivar datos de usuario."  id="btnEliminar"/>
                <img src="@Url.Content("~/Images/botones/buscar.png")" alt="Inactivar datos de usuario." title="Inactivar datos de usuario."  id="btnBuscarBS"/>
                &nbsp; 
            </div>
    </td></tr>
    <tr><td>

            <center>
               <div id="grid"></div>
            </center> 
    </td></tr>
       <tr><td style='height: 30px;'>
    <center>
            <div id='error' style=" width: 100% ; vertical-align:  middle; ">
            </div>
    </center>
        </td></tr>
</table>
         
<div title="Registrar Nuevo Usuario" id="ModalNeoUsu">
    <br>
    <table width='98%' border='0' id='FiltroTablaPop'>
        <tr>
            <td> Codigo :</td>
            <td colspan="3"><input type='text' id='txtCodigo' name='txtCodigo' disabled='disabled'/></td>
        </tr>
        <tr><td colspan="4"><hr></td></tr>
        <tr>
            <td> Nombres :</td>
            <td><input type='text' id='txtNombre'  class="requerido"  name='txtNombre' maxlength="20"/></td>
</tr>
        <tr>
            <td> Apellido Paterno :</td>
            <td><input type='text' id='txtPaterno'   class="requerido" name='txtPaterno' maxlength="10"/></td>
        </tr>
        <tr>
            
            <td> Apellido Materno :</td>
            <td><input type='text' id='txtMaterno'  class="requerido"  name='txtMaterno' maxlength="10"/></td>
        </tr>
    
        <tr>
            <td> Usuario de Red :</td>
            <td><input type='text' id='txtRed'   class="requerido"  name='txtRed' maxlength="10"/></td>
          </tr>
        <tr>  <td> Password :</td>
            <td><input type='password' id='txtPass'   class="requerido"  name='txtPass' maxlength="10" size="30" /></td>
        </tr>
        <tr>
            <td>  Rol  </td>
            <td>
                <div id='divddlRol'>
                    <select name="ddlRol" id="ddlRol">
                    </select>
                </div>
            </td>
              </tr>
        <tr>
            <td> Estado :</td>
            <td>
                <select name="selEstado" id="selEstado">
                    <option value="1">Activo</option>
                    <option value="0">Inactivo</option>
                </select>
            </td>
        </tr>
        <tr>
              <td colspan="4">  <div id='aviso'></div></td>
            <input hidden="hidden" id="hidOpcionEdit" />
        </tr>
         
    </table>
</div>
 
    </div>
</body>
</html>
